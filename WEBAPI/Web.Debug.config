		<add name="Sigma.Infra.Data.Properties.Settings.BNGConnectionString1" connectionString="Data Source=177.86.10.190,2022;Initial Catalog=BNG;User ID=sa;Password=Tenho1acessodatabase." providerName="System.Data.SqlClient" />
